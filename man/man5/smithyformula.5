  +PLAT = LINUX
  +BLLIB = #{acml_prefix}/gfortran64/lib/libacml\.a
  +CBLIB = #{prefix}/lib/libcblas\.a
  +CC = gcc
  +FC = gfortran
  +LOADER = $(FC)
  +CFLAGS = \-O3 \-DADD_
  +FFLAGS = \-O3
  +ARCH = ar
  +ARCHFLAGS = r
  +RANLIB = ranlib
EOF
.
.fi
