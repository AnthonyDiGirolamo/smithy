#!/bin/bash
source $SMITHY_PREFIX/remodule

# clean out old install
cd $SMITHY_PREFIX && rm -rf bin doc etc include info lib lib64 libexec man share
cd $SMITHY_SOURCE

make clean

if ./configure --prefix=$SMITHY_PREFIX
  then echo "==> CONFIGURE SUCCESS"
  else echo "==> CONFIGURE FAILED" && exit 1
fi

if make
  then echo "==> MAKE SUCCESS"
  else echo "==> MAKE FAILED" && exit 1
fi

if make install
  then echo "==> INSTALL SUCCESS"
  else echo "==> INSTALL FAILED" && exit 1
fi

exit 0
